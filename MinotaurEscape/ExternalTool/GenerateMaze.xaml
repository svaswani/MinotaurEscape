        xmlns:local="clr-namespace:ExternalTool"
        mc:Ignorable="d"
        Title="Generate Maze" Height="249.981" Width="324.646" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>

        <Label x:Name="heightLabel" Content="Height:" HorizontalAlignment="Left" Margin="25,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="heightTextBox" HorizontalAlignment="Right" Height="23" Margin="0,75,25,0" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="180"/>
        <Label x:Name="algorithmLabel" Content="Algorithm:" HorizontalAlignment="Left" Margin="25,125,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="algorithmComboBox" HorizontalAlignment="Right" Height="23" Margin="0,125,25,0" Text="10" VerticalAlignment="Top" Width="180" SelectedIndex="0"/>

    </Grid>
</Window>

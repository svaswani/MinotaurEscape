<Window x:Class="ExternalTool.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExternalTool"
        mc:Ignorable="d"
        Title="Loading" Height="121.875" Width="300" WindowStyle="None">
    <Grid>
        <ProgressBar x:Name="loadingBar" Height="20" Margin="25,15,25,0" VerticalAlignment="Center" />
        <Label x:Name="loadingLabel" Content="Loading Message..." HorizontalAlignment="Center" Margin="0,0,0,35" VerticalAlignment="Center"/>

    </Grid>
</Window>
